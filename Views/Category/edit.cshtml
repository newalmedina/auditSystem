@model auditSystem.Models.Category
@{
    // ViewData["title"] = "Mantenimiento";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Categor√≠as</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">@ViewData["SubTitle"]</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control" cols="30"
                                            rows="10"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label asp-for="Description" class="control-label col-md-12 "></label>
                                        <input type="radio" asp-for="Active" value="true" name="active" checked> <label
                                            class="control-label">Si
                                        </label>
                                        <input type="radio" asp-for="Active" value="false" name="active"> <label
                                            class="control-label">No
                                        </label>
                                        <span asp-validation-for="Active" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-row">
                                    <div class="form-group col-md-12 d-flex justify-content-between">
                                        <a asp-action="Index" class="btn btn-primary"><i class="fa fa-table"></i>
                                            Volver a
                                            listado</a>
                                        <input type="submit" value="Guardar" class="btn btn-success" />
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
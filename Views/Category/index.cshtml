@model IEnumerable<Category>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">@ViewData["SubTitle"]</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 text-right  mb-4">
                                    <a class="btn btn-outline-success" asp-action="Edit"><i
                                            class="fa fa-plus-square"></i> Añadir
                                        nuevo</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Active)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Description)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Created_at)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Updated_at)
                                                </th>
                                                <th>
                                                    Acciones
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <span
                                                        class='badge @(item.Active? "badge-success" : "badge-danger")'>@(item.Active?
                                                        "Activo" : "Desactivado")</span>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Description)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Created_at)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Updated_at)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id"><i
                                                            class="fa fa-marker fa-lg"></i></a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                                        class="text-danger ml-1"
                                                        onclick="return confirm('¿Está seguro que desea eliminar este registro?')"><i
                                                            class="fa fa-trash-alt fa-lg"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->